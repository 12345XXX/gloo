ingress:
  type: NodePort
  replicaCount: 1
  port: 8080
  securePort: 8443
  adminPort: 19000
  image: "soloio/envoy"
  imageTag: "latest"
  imagePullPolicy: Always

gloo:
  type: NodePort
  replicaCount: 1
  port: 8081
  image: "soloio/gloo"
  imageTag: {{ .ImageTag }}
  imagePullPolicy: Always

#  discovery
gloo_function_discovery:
  image: soloio/gloo-function-discovery
  imageTag: {{ .ImageTag }}
  imagePullPolicy: Always
  enable: true

gloo_ingress_controller:
  image: soloio/kube-ingress-controller
  imageTag: {{ .ImageTag }}
  imagePullPolicy: Always
  enable: true

gloo_k8s_service_discovery:
  image: soloio/kube-upstream-discovery
  imageTag: {{ .ImageTag }}
  imagePullPolicy: Always
  enable: true
